<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.l10n_pe_edi_odoofact</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/tree//field[@name='discount']"
                position="after"
            >
                <field name="l10n_pe_edi_is_free_product" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']//tree" position="attributes">
                <attribute
                    name="decoration-success"
                >l10n_pe_edi_is_free_product == True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
